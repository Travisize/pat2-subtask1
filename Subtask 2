#include <iostream>
using namespace std;
// Function to get Morse code for a character
string getMorse(char c) {
    switch(toupper(c)) {
        case 'A': return ".-";
        case 'B': return "-...";
        case 'C': return "-.-.";
        case 'D': return "-..";
        case 'E': return ".";
        case 'F': return "..-.";
        case 'G': return "--.";
        case 'H': return "....";
        case 'I': return "..";
        case 'J': return ".---";
        case 'K': return "-.-";
        case 'L': return ".-..";
        case 'M': return "--";
        case 'N': return "-.";
        case 'O': return "---";
        case 'P': return ".--.";
        case 'Q': return "--.-";
        case 'R': return ".-.";
        case 'S': return "...";
        case 'T': return "-";
        case 'U': return "..-";
        case 'V': return "...-";
        case 'W': return ".--";
        case 'X': return "-..-";
        case 'Y': return "-.--";
        case 'Z': return "--..";
        case ' ': return " "; // space between words
        default: return "";   // skip any other characters
    }
}
int main() {
    char message[100];
    
    cout << "Enter a short message: ";
    cin.getline(message, 100);
    
    cout << "\nOutput Morse code:\n";

    string fullMorse = "";

    for (int i = 0; message[i] != '\0'; i++) {
        char c = message[i];
        string morse = getMorse(c);
        if (morse != "") {
            cout << (char)toupper(c) << ": " << morse << endl;
            fullMorse += morse + "   "; // 3 spaces between letters
        }
    }

    cout << "\nFull Morse code with spaces:\n";
    cout << fullMorse << endl;

    return 0;

